@typeparam Titem

<h3>GenericList</h3>


@if (MyList is null)
{
    @if(Loading is null)
    {
        <div class="align-items-center">
            <img src="https://media3.giphy.com/media/3o7bu3XilJ5BOiSGic/200w.gif?cid=6c09b952ymsvf7f51hqrrol1e0curv88w30g0kqjlnh58bo7&ep=v1_gifs_search&rid=200w.gif&ct=g" />
        </div>
    }
    else
    {
        @Loading
    }
}
else
{
    @if (MyList.Count == 0)
    {
        @if(NoRecords is null)
        {
            <div class="align-items-center">
                <p>No hay registros para mostrar.</p>
            </div>
        }
        else
        {
            @NoRecords
        }
    }
    else
    {
        @Body
    }
}


@code {
    [Parameter]
    public RenderFragment? Loading { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    //Parámetros obligatorios
    [Parameter]
    [EditorRequired]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> MyList { get; set; } = null!;
}
