@typeparam Titem

@if (MyList == null)
{
    @if(Loading == null)
    {
        <div class="align-items-center">
            <img src="https://cdn.pixabay.com/animation/2023/10/08/03/19/03-19-26-213_512.gif" />
        </div>
    }
    else
    {
        @Loading
    }
}
else
{
    @if (MyList.Count == 0)
    {
        @if(NoRecords == null)
        {
            <div class="align-items-center">
                <p>No hay registros para mostrar.</p>
            </div>
        }
        else
        {
            @NoRecords
        }
    }
    else
    {
        @Body
    }
}


@code {
    [Parameter]
    public RenderFragment? Loading { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    //Parámetros obligatorios
    [Parameter]
    [EditorRequired]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> MyList { get; set; } = null!;
}
